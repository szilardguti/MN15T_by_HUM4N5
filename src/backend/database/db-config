let dbconfig = {
    host: "sql7.freemysqlhosting.net",
    user: "sql7547525",
    password: "",
    database: "sql7547525",
    connectTimeout: 100000, 
    acquireTimeout: 100000
};

const setPWforDBconfig = ( pw, _callback ) => {
    dbconfig.password = pw;
    console.log('DB config initalised');
    _callback();
}

module.exports = {
    setPWforDBconfig,
    dbconfig: dbconfig
}